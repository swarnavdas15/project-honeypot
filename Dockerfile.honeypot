FROM python:3.10-slim
WORKDIR /app
COPY requirements.txt /app/
RUN pip install --no-cache-dir -r requirements.txt
COPY . /app
# Create events directory
RUN mkdir -p /app/events
# Use a non-root user for safety in container; blocking won't work without CAP_NET_ADMIN
RUN useradd -m hpuser || true
USER hpuser
ENV HP_ENABLE_BLOCK=false
CMD ["python", "honeypot.py"]